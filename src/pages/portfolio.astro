---
import { PORTFOLIO } from '../lib/constants'
import BaseLayout from '../layouts/BaseLayout.astro'
import TopLayout from '../layouts/TopLayout.astro'
import BottomLayout from '../layouts/BottomLayout.astro'
import ProjectCard from '../components/ProjectCard.astro'

import { PROJECTS } from '../lib/constants'
---

<BaseLayout
  title="Portfolio"
  description="Projects and some clones that I did"
>
  <main class="flex min-h-[80vh] flex-auto flex-col" transition:animate="slide">
    <TopLayout>
      <h2
        class="scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0"
      >
        Projects
      </h2>
    </TopLayout>
    <BottomLayout>
      <div class="flex w-full flex-wrap justify-center gap-4 md:gap-6">
        {
          PROJECTS.map((project) => (
            <ProjectCard
              key={project.id}
              href={project.link}
              heading={project.name}
              imagePath={project.image}
              class="w-full :w-[calc(50%-0.5rem)]"
            />
          ))
        }
      </div>
    </BottomLayout>
  </main>
</BaseLayout>